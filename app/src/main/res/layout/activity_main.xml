<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/firstScreen"
        tools:context=".firstScreen.MainActivity">

    <Spinner
            android:id="@+id/spinner"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="25dp"
            style="@style/Base.Widget.AppCompat.Spinner.Underlined"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:entries="@array/type_news"
            android:textAlignment="center"
            tools:ignore="MissingConstraints">

    </Spinner>

    <fragment
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/list_news_fragment"
            android:name="com.example.myapplication.firstScreen.FirstScreenFragment"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="59dp"
            app:layout_constraintTop_toBottomOf="@+id/spinner"></fragment>



</android.support.constraint.ConstraintLayout>